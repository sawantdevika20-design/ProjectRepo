<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer Profile - Jewelicious</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>

    <nav>
      <div class="nav-left">
        <img src="logo.png" alt="Jewelicious Logo" />
      </div>
      <div class="nav-center">
        <span class="brand-name">Jewelicious</span>
      </div>
      <div class="nav-right">
        <a href="/logout" class="btn btn-danger"><i
            class="fas fa-sign-out-alt"
          ></i></a>
        <a href="#cart" title="Cart"><i class="fas fa-shopping-cart"></i></a>
      </div>
    </nav>

        <h2 class="text-primary mb-4">Hello, {{Name}}!</h2>
        <p class="lead">Welcome to your profile.</p>

        <ul class="list-group mb-4">
          <li class="list-group-item">
            <i class="fas fa-phone me-2"></i>
            <strong>Phone:</strong>
            {{Phone_Number}}
          </li>
          <li class="list-group-item">
            <i class="fas fa-map-marker-alt me-2"></i>
            <strong>Address:</strong><br />
            {{HouseNo}},
            {{Building_Name}},
            {{Street}},
            {{Landmark}},<br />
            {{City}},
            {{State}}
            -
            {{Pincode}}
          </li>
        </ul>

        <div class="d-flex gap-2">
          <a
            href="/edit-profile?name={{Name}}&phone={{Phone_Number}}&house={{HouseNo}}&building={{Building_Name}}&street={{Street}}&landmark={{Landmark}}&city={{City}}&state={{State}}&pincode={{Pincode}}"
            class="btn btn-outline-primary"
          >
            <i class="fas fa-user-edit"></i>
            Edit Profile
          </a>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>