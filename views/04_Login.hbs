<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Jewelicious</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />

  </head>

  <body>
    <div class="backdrop d-flex justify-content-center align-items-center">
      <div
        class="card p-4 shadow-lg rounded-4"
        style="max-width: 400px; width: 100%;"
      >
        <h3
          style="font-family: 'Times New Roman', Times, serif; color: #5b5247;"
        >Login</h3>
        {{#if message}}
          <div class="alert alert-danger text-center">{{message}}</div>
        {{/if}}
        <form action="/auth/Login" method="POST">
          <div class="form-group mb-3">
            <label>Phone Number</label>
            <input
              type="text"
              class="form-control"
              name="Phone_Number"
              required
            />
          </div>
          <div class="form-group mb-3">
            <label>Password</label>
            <input
              type="password"
              class="form-control"
              name="Password"
              required
            />
          </div>
          <button
            type="submit"
            style="background-color: #5b5247 ; color:azure;"
          >Login</button>
        </form>
        <p class="text-center mt-3">
          Donâ€™t have an account?
          <a href="/02_register">Register here</a>
        </p>
      </div>
    </div>
  </body>
</html>