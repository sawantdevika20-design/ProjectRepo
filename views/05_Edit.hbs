<html>
  <head>
    <title>Edit-Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles.css" />

  </head>
  <body>
    <div class="backdrop d-flex justify-content-center align-items-center">
      <div
        class="card p-4 shadow-lg rounded-4"
        style="max-width: 800px; width: 100%;"
      >
        <h3
          style="font-family: 'Times New Roman', Times, serif; color: #5b5247;"
        >Edit Profile!</h3>

        {{#if message}}
          <div class="alert alert-danger text-center">{{message}}</div>
        {{/if}}

        <form action="/03_Customer/edit" method="POST">
          <input type="hidden" name="Phone_Number" value="{{Phone_Number}}" />

          <div class="form-group mb-3">
            <label>Name</label>
            <input
              type="text"
              class="form-control"
              name="Name"
              value="{{Name}}"
              required
            />
          </div>

          <div class="form-group mb-3">
            <label>House No</label>
            <input
              type="text"
              class="form-control"
              name="HouseNo"
              value="{{HouseNo}}"
              required
            />
          </div>

          <div class="form-group mb-3">
            <label>Building Name</label>
            <input
              type="text"
              class="form-control"
              name="Building_Name"
              value="{{Building_Name}}"
              required
            />
          </div>

          <div class="form-group mb-3">
            <label>Street</label>
            <input
              type="text"
              class="form-control"
              name="Street"
              value="{{Street}}"
              required
            />
          </div>

          <div class="form-group mb-3">
            <label>Landmark</label>
            <input
              type="text"
              class="form-control"
              name="Landmark"
              value="{{Landmark}}"
              required
            />
          </div>

          <div class="form-group mb-3">
            <label>City</label>
            <input
              type="text"
              class="form-control"
              name="City"
              value="{{City}}"
              required
            />
          </div>

          <div class="form-group mb-3">
            <label>State</label>
            <input
              type="text"
              class="form-control"
              name="State"
              value="{{State}}"
              required
            />
          </div>

          <div class="form-group mb-3">
            <label>Pincode</label>
            <input
              type="text"
              class="form-control"
              name="Pincode"
              value="{{Pincode}}"
              required
            />
          </div>

          <button
            type="submit"
            style="background-color: #5b5247 ; color:azure;"
          >Update</button>
        </form>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
    ></script>
  </body>
</html>