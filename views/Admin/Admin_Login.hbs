<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Login</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />

  </head>
  <body>
    <div class="backdrop d-flex justify-content-center align-items-center">
      <div
        class="card p-4 shadow-lg rounded-4"
        style="max-width: 400px; width: 100%;"
      >
        <h3
          style="font-family: 'Times New Roman', Times, serif; color: #5b5247;"
        >Login</h3>
        {{#if message}}
          <div class="alert alert-danger text-center">{{message}}</div>
        {{/if}}
        <form method="POST" action="/admin/login">
          <label>Phone Number : </label>
          <input
            type="text"
            name="phone"
            class="form-control"
            placeholder="Phone"
            required
          />
          <br /><br />
          <label>Password :</label>
          <input
            type="password"
            name="password"
            class="form-control"
            placeholder="Password"
            required
          />
          <br /><br />
          <div class="text-center">
            <button
              type="submit"
              style="background-color: #5b5247 ; color:azure;"
            >Login</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>